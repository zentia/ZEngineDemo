{
    "version": 4,
    "configurePresets": [
        {
            "name": "linux_make_debug",
            "displayName": "Linux Make Debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "USE_CCACHE": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux_make_release",
            "displayName": "Linux Make Release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "USE_CCACHE": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux_ninja_debug",
            "displayName": "Linux Ninja Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "USE_CCACHE": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux_ninja_release",
            "displayName": "Linux Ninja Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "USE_CCACHE": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux_debug",
            "displayName": "Linux Debug",
            "configurePreset": "linux_ninja_debug",
            "targets": [
                "ZEngineDemo"
            ],
            "nativeToolOptions": [
                "-j"
            ]
        },
        {
            "name": "linux_release",
            "displayName": "Linux Release",
            "configurePreset": "linux_ninja_release",
            "targets": [
                "ZEngineDemo"
            ],
            "nativeToolOptions": [
                "-j"
            ]
        }
    ]
}

