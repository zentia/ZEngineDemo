{
    "version": 4,
    "configurePresets": [
        {
            "name": "windows_except_vscode",
            "hidden": true,
            "condition": {
                "type": "allOf",
                "conditions": [
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Windows"
                    },
                    {
                        "type": "equals",
                        "lhs": "$env{VSCODE_NLS_CONFIG}",
                        "rhs": ""
                    }
                ]
            }
        },
        {
            "name": "windows_visual_studio",
            "displayName": "Windows Visual Studio",
            "inherits": "windows_except_vscode",
            "generator": "Visual Studio 17 2022",
            "toolset": "ClangCL",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
            }
        },
        {
            "name": "windows_ninja",
            "displayName": "Windows Ninja",
            "inherits": "windows_except_vscode",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "windows_vscode",
            "displayName": "Windows VSCode",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/build_vscode/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows_vscode_debug",
            "displayName": "Windows VSCode Debug",
            "inherits": "windows_vscode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows_vscode_release",
            "displayName": "Windows VSCode Release",
            "inherits": "windows_vscode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows_debug",
            "displayName": "Windows Debug",
            "configurePreset": "windows_visual_studio",
            "configuration": "Debug",
            "targets": [
                "ZEngineDemo"
            ],
            "nativeToolOptions": [
                "-j",
                "0"
            ]
        },
        {
            "name": "windows_release",
            "displayName": "Windows Release",
            "configurePreset": "windows_visual_studio",
            "configuration": "Release",
            "targets": [
                "ZEngineDemo"
            ],
            "nativeToolOptions": [
                "-j",
                "0"
            ]
        },
        {
            "name": "windows_relwithdebinfo",
            "displayName": "Windows RelWithDebInfo",
            "configurePreset": "windows_visual_studio",
            "configuration": "RelWithDebInfo",
            "targets": [
                "ZEngineDemo"
            ],
            "nativeToolOptions": [
                "-j",
                "0"
            ]
        }
    ]
}