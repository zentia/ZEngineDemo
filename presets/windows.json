{
    "version": 4,
    "configurePresets": [
        {
            "name": "windows_except_vscode",
            "hidden": true,
            "condition": {
                "type": "allOf",
                "conditions": [
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Windows"
                    },
                    {
                        "type": "equals",
                        "lhs": "$env{VSCODE_NLS_CONFIG}",
                        "rhs": ""
                    }
                ]
            }
        },
        {
            "name": "windows_visual_studio",
            "displayName": "Windows Visual Studio",
            "inherits": "windows_except_vscode",
            "generator": "Visual Studio 17 2022",
            "toolset": "ClangCL",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "windows_ninja",
            "displayName": "Windows Ninja",
            "inherits": "windows_except_vscode",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/toolchain/clang-cl.cmake",
            "binaryDir": "${sourceDir}/build/build_win_ninja"
        },
        {
            "name": "windows_vscode",
            "displayName": "Windows VSCode",
            "generator": "Ninja",
            "hidden": true,
            "toolchainFile": "${sourceDir}/toolchain/clang-cl.cmake",
            "binaryDir": "${sourceDir}/build/build_vscode/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows_vscode_debug",
            "displayName": "Windows VSCode Debug",
            "inherits": "windows_vscode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows_vscode_profile",
            "displayName": "Windows VSCode Profile",
            "inherits": "windows_vscode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Profile"
            }
        },
        {
            "name": "windows_vscode_release",
            "displayName": "Windows VSCode Release",
            "inherits": "windows_vscode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows_ci",
            "displayName": "Windows CI",
            "configurePreset": "windows_ninja",
            "configuration": "RelWithDebInfo",
            "targets": [
                "ZEditor"
            ],
            "nativeToolOptions": [
                "-j",
                "16"
            ]
        },
        {
            "name": "windows_editor",
            "displayName": "Windows Editor",
            "configurePreset": "windows_visual_studio",
            "configuration": "RelWithDebInfo",
            "targets": [
                "ZEditor"
            ],
            "nativeToolOptions": [
                "-j",
                "0"
            ]
        },
        {
            "name": "windows_pc",
            "displayName": "Windows PC",
            "configurePreset": "windows_visual_studio",
            "configuration": "RelWithDebInfo",
            "targets": [
                "ZEditor"
            ],
            "nativeToolOptions": [
                "-j",
                "0"
            ]
        }
    ]
}

